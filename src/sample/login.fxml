<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import java.lang.*?>
<?import javafx.scene.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane styleClass="root" stylesheets="@../stylesheets/login.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox id="loginPanel" alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <TextField id="usernameTextfield" alignment="CENTER" maxHeight="10.0" maxWidth="200.0" prefHeight="10.0" prefWidth="200.0" promptText="Username">
               <font>
                  <Font name="Tahoma" size="13.0" />
               </font>
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </TextField>
            <PasswordField alignment="CENTER" promptText="Password" stylesheets="@../stylesheets/login.css">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </PasswordField>
            <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" text="Log in" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="50.0" left="60.0" right="50.0" top="50.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </center>
   <left>
      <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="80.0" fitWidth="140.0" layoutX="30.0" layoutY="52.0">
               <cursor>
                  <Cursor fx:constant="SW_RESIZE" />
               </cursor>
               <image>
                  <Image url="@../images/themart.jpg" />
               </image>
            </ImageView>
         </children>
      </Pane>
   </left>
   <right>
      <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </right>
   <bottom>
      <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </bottom>
   <top>
      <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </top>
</BorderPane>
